<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false">

    <RelativeLayout
        android:id="@+id/layer_load"
        android:layout_width="match_parent"
        android:layout_height="56dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false">

        <!-- Layer name -->

        <TextView
            android:id="@+id/layer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/projects_activity_name"
            android:textColor="#040404"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/remove_layer"
        android:layout_width="112dip"
        android:layout_height="55dip"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/delete_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:contentDescription="@string/remove_layer"
            android:focusable="false"
            android:padding="5dip"
            android:src="@drawable/ic_action_delete" />

    </LinearLayout>
    <!--ListView
            android:id="@+id/layers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"-->

</RelativeLayout>
