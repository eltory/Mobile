<?xml version="1.0" encoding="utf-8"?>

<!-- Add for Error Navigator -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/errorNavigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:orientation="horizontal"
        android:weightSum="10"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/leftButton"
            android:contentDescription="@string/navigator_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/left_button_event"
            android:padding="8dp"
            android:layout_weight="2"/>

        <TableLayout
            android:id="@+id/navigatorContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:shrinkColumns="0,1,2"
            android:layout_weight="6"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BDC3C7"
                android:padding="1dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Error Number"
                    android:textColor="#ECF0F1"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="#2C3E50"
                    android:textSize="13sp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Error Name"
                    android:textColor="#ECF0F1"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="#2C3E50"
                    android:textSize="13sp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Feature ID"
                    android:textColor="#ECF0F1"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:background="#2C3E50"
                    android:textSize="13sp"
                    android:gravity="center_horizontal"
                    />

            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/rightButton"
            android:contentDescription="@string/navigator_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/navigatorContent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@drawable/right_button_event"
            android:padding="8dp"
            android:layout_weight="2"/>

</LinearLayout>